    <package name="home" namespace="/" extends="json-default">

    </package>

    <package name="user" namespace="/user" extends="json-default">
        <!--登录注册-->
        <action name="login" class="com.baige.action.UserAction" method="login">
            <interceptor-ref name="json"></interceptor-ref>
            <result name="success" type="json">
                <param name="root">responseMsgMap</param>
            </result>
        </action>
        <action name="register" class="com.baige.action.UserAction" method="register">
            <interceptor-ref name="json"></interceptor-ref>
            <result name="success" type="json">
                <param name="root">responseMsgMap</param>
            </result>
        </action>
        <action name="alias" class="com.baige.action.UserAction" method="alias">
            <interceptor-ref name="json"></interceptor-ref>
            <result name="success" type="json">
                <param name="root">responseMsgMap</param>
            </result>
        </action>
    </package>

    <package name="chat" namespace="/chat" extends="json-default">
        <!--发送消息-->
        <action name="send" class="com.baige.action.ChatMessageAction" method="sendMsg">
            <interceptor-ref name="json"></interceptor-ref>
            <result name="success" type="json">
                <param name="root">responseMsgMap</param>
            </result>
        </action>
        <action name="receiveFind" class="com.baige.action.ChatMessageAction" method="findMsgByReceiveId">
            <interceptor-ref name="json"></interceptor-ref>
            <result name="success" type="json">
                <param name="root">responseMsgMap</param>
            </result>
        </action>
        <action name="sendFind" class="com.baige.action.ChatMessageAction" method="findMsgBySenderId">
            <interceptor-ref name="json"></interceptor-ref>
            <result name="success" type="json">
                <param name="root">responseMsgMap</param>
            </result>
        </action>
    </package>
    <package name="file" namespace="/file" extends="json-default">
        <action name="upload" class="com.baige.action.FileAction" method="upload">
            <!--<result name="success" type="json">-->
                <!--<param name="root">responseMsgMap</param>-->
            <!--</result>-->
        </action>
    </package>
</struts>